  

CREATE TABLE [dbo].[TBL_CUSTOMER_LIST](
	[CUSTOMER_ID] [int] IDENTITY(1,1) NOT NULL,
	[EMAIL] varchar(max) not null,
	[FIRST_NAME] [varchar](150) NULL,
	[LAST_NAME] [varchar](150) NULL,
	[GENDER] [char](1) NULL,
	[DOB] [date] NULL,
	[CREATED_DATE] datetime,
	[UPDATED_DATE] datetime,
 CONSTRAINT [PK_TBL_CUSTOMER_LIST] PRIMARY KEY CLUSTERED 
(
	[CUSTOMER_ID] ASC
)WITH (PAD_INDEX = OFF, STATISTICS_NORECOMPUTE = OFF, IGNORE_DUP_KEY = OFF, ALLOW_ROW_LOCKS = ON, ALLOW_PAGE_LOCKS = ON, FILLFACTOR = 80, OPTIMIZE_FOR_SEQUENTIAL_KEY = OFF) ON [PRIMARY],
)

ALTER TABLE [dbo].[TBL_CUSTOMER_LIST] ADD  DEFAULT (getdate()) FOR [CREATED_DATE]
GO

ALTER TABLE [dbo].[TBL_CUSTOMER_LIST] ADD  DEFAULT (getdate()) FOR [UPDATED_DATE]
GO
 

------
 
CREATE TABLE [dbo].[TBL_CUSTOMER_CART](
	[CUSTOMER_CART_ID] [int] IDENTITY(1,1) NOT NULL,
	[CUSTOMER_ID] [int] NULL,
	[CREATE_DATE] [datetime] NOT NULL,
	[UPDATED_DATE] [datetime] NOT NULL,
	[STATUS] [bit] NOT NULL,
 CONSTRAINT [PK_TBL_CUSTOMER_CART] PRIMARY KEY CLUSTERED 
(
	[CUSTOMER_CART_ID] ASC
)WITH (PAD_INDEX = OFF, STATISTICS_NORECOMPUTE = OFF, IGNORE_DUP_KEY = OFF, ALLOW_ROW_LOCKS = ON, ALLOW_PAGE_LOCKS = ON, FILLFACTOR = 90, OPTIMIZE_FOR_SEQUENTIAL_KEY = OFF) ON [PRIMARY]
) ON [PRIMARY]
GO

ALTER TABLE [dbo].[TBL_CUSTOMER_CART] ADD  DEFAULT (getdate()) FOR [CREATE_DATE]
GO

ALTER TABLE [dbo].[TBL_CUSTOMER_CART] ADD  CONSTRAINT [DF_TBL_CUSTOMER_CART_ACTIVE]  DEFAULT ((1)) FOR [STATUS]
GO
 
 ---
  

CREATE TABLE [dbo].[TBL_CUSTOMER_CART_DETAIL](
	[CUSTOMER_CART_ID] [int] IDENTITY(1,1) NOT NULL,
	[CUSTOMER_ID] [int] NULL,
	[PRODUCT_ID] INT,
	[QUANTITY] INT,
	COLOUR INT,
	[CREATE_DATE] [datetime] NOT NULL,
	[UPDATED_DATE] [datetime] NOT NULL,
	[STATUS] [bit] NOT NULL,
 CONSTRAINT [PK_TBL_CUSTOMER_CART_DETAIL] PRIMARY KEY CLUSTERED 
(
	[CUSTOMER_CART_ID] ASC
)WITH (PAD_INDEX = OFF, STATISTICS_NORECOMPUTE = OFF, IGNORE_DUP_KEY = OFF, ALLOW_ROW_LOCKS = ON, ALLOW_PAGE_LOCKS = ON, FILLFACTOR = 90, OPTIMIZE_FOR_SEQUENTIAL_KEY = OFF) ON [PRIMARY]
) ON [PRIMARY]
GO
 
				  		 
						 

ALTER TABLE [dbo].[TBL_CUSTOMER_CART_DETAIL] ADD  DEFAULT (getdate()) FOR [CREATE_DATE]
GO

ALTER TABLE [dbo].[TBL_CUSTOMER_CART_DETAIL] ADD  CONSTRAINT [DF_TBL_CUSTOMER_CART_DETAIL]  DEFAULT ((1)) FOR [STATUS]
GO
 





