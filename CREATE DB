---start of Database creation --
CREATE DATABASE [NAVTECH]
 CONTAINMENT = NONE
 ON  PRIMARY 
( NAME = N'NAVTECH', FILENAME = N'C:\Program Files\Microsoft SQL Server\MSSQL15.MSSQLSERVER\MSSQL\DATA\NAVTECH.mdf' , SIZE = 8192KB , FILEGROWTH = 65536KB )
 LOG ON 
( NAME = N'NAVTECH_log', FILENAME = N'C:\Program Files\Microsoft SQL Server\MSSQL15.MSSQLSERVER\MSSQL\DATA\NAVTECH_log.ldf' , SIZE = 8192KB , FILEGROWTH = 65536KB )
GO
ALTER DATABASE [NAVTECH] SET COMPATIBILITY_LEVEL = 150
GO
ALTER DATABASE [NAVTECH] SET ANSI_NULL_DEFAULT OFF 
GO
ALTER DATABASE [NAVTECH] SET ANSI_NULLS OFF 
GO
ALTER DATABASE [NAVTECH] SET ANSI_PADDING OFF 
GO
ALTER DATABASE [NAVTECH] SET ANSI_WARNINGS OFF 
GO
ALTER DATABASE [NAVTECH] SET ARITHABORT OFF 
GO
ALTER DATABASE [NAVTECH] SET AUTO_CLOSE OFF 
GO
ALTER DATABASE [NAVTECH] SET AUTO_SHRINK OFF 
GO
ALTER DATABASE [NAVTECH] SET AUTO_CREATE_STATISTICS ON(INCREMENTAL = OFF)
GO
ALTER DATABASE [NAVTECH] SET AUTO_UPDATE_STATISTICS ON 
GO
ALTER DATABASE [NAVTECH] SET CURSOR_CLOSE_ON_COMMIT OFF 
GO
ALTER DATABASE [NAVTECH] SET CURSOR_DEFAULT  GLOBAL 
GO
ALTER DATABASE [NAVTECH] SET CONCAT_NULL_YIELDS_NULL OFF 
GO
ALTER DATABASE [NAVTECH] SET NUMERIC_ROUNDABORT OFF 
GO
ALTER DATABASE [NAVTECH] SET QUOTED_IDENTIFIER OFF 
GO
ALTER DATABASE [NAVTECH] SET RECURSIVE_TRIGGERS OFF 
GO
ALTER DATABASE [NAVTECH] SET  DISABLE_BROKER 
GO
ALTER DATABASE [NAVTECH] SET AUTO_UPDATE_STATISTICS_ASYNC OFF 
GO
ALTER DATABASE [NAVTECH] SET DATE_CORRELATION_OPTIMIZATION OFF 
GO
ALTER DATABASE [NAVTECH] SET PARAMETERIZATION SIMPLE 
GO
ALTER DATABASE [NAVTECH] SET READ_COMMITTED_SNAPSHOT OFF 
GO
ALTER DATABASE [NAVTECH] SET  READ_WRITE 
GO
ALTER DATABASE [NAVTECH] SET RECOVERY FULL 
GO
ALTER DATABASE [NAVTECH] SET  MULTI_USER 
GO
ALTER DATABASE [NAVTECH] SET PAGE_VERIFY CHECKSUM  
GO
ALTER DATABASE [NAVTECH] SET TARGET_RECOVERY_TIME = 60 SECONDS 
GO
ALTER DATABASE [NAVTECH] SET DELAYED_DURABILITY = DISABLED 
GO
USE [NAVTECH]
GO
ALTER DATABASE SCOPED CONFIGURATION SET LEGACY_CARDINALITY_ESTIMATION = Off;
GO
ALTER DATABASE SCOPED CONFIGURATION FOR SECONDARY SET LEGACY_CARDINALITY_ESTIMATION = Primary;
GO
ALTER DATABASE SCOPED CONFIGURATION SET MAXDOP = 0;
GO
ALTER DATABASE SCOPED CONFIGURATION FOR SECONDARY SET MAXDOP = PRIMARY;
GO
ALTER DATABASE SCOPED CONFIGURATION SET PARAMETER_SNIFFING = On;
GO
ALTER DATABASE SCOPED CONFIGURATION FOR SECONDARY SET PARAMETER_SNIFFING = Primary;
GO
ALTER DATABASE SCOPED CONFIGURATION SET QUERY_OPTIMIZER_HOTFIXES = Off;
GO
ALTER DATABASE SCOPED CONFIGURATION FOR SECONDARY SET QUERY_OPTIMIZER_HOTFIXES = Primary;
GO
USE [NAVTECH]
GO
IF NOT EXISTS (SELECT name FROM sys.filegroups WHERE is_default=1 AND name = N'PRIMARY') ALTER DATABASE [NAVTECH] MODIFY FILEGROUP [PRIMARY] DEFAULT
GO
---------END of Database creation --- 

